<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img class="logo" src="/img/logo.png" alt="">
            <h3 class="text-center">注册</h3>
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="name">用户名</label>
                    <input type="text" name="name" value="{{name}}" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">邮箱</label>
                    <input type="email" value="{{email}}" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">密码</label>
                    <input type="password" value="{{password}}" name="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password2">二次验证密码</label>
                    <input type="password" value="{{password2}}" name="password2" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">注册</button>
            </form>
        </div>
    </div>
</div>